{
    "compilerOptions": {
      // "allowSyntheticDefaultImports": true,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["ESNext"],
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      // "rootDir": "./src",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "ESNext",
    },
    "exclude": ["node_modules", "dist"]
  }
  